<Window x:Class="SequenceAnalyzer.Windows.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SequenceAnalyzer.Windows"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="Details - ViewSerializability" Height="300" Width="500" WindowStartupLocation="CenterOwner" ResizeMode="CanMinimize" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label x:Name="LabelSequence" Content="Sequence" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5, 5" FontWeight="Bold" FontSize="18"/>
        <fa:FontAwesome x:Name="FaIcon" Icon="CheckCircle" Foreground="#43b581" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="24" Margin="0, 10, 10, 5"/>

        <TreeView x:Name="TreeViewResults" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1"/>
    </Grid>
</Window>
